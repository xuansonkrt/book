@model book.Models.ViewModels.InvoiceDetailVM
@using PagedList.Mvc;
@using book.Global


<head>

    <!-- Basic -->
    <meta charset="UTF-8">

    <title>Cửa hàng sách MS</title>
    <meta name="keywords" content="HTML5 Admin Template" />
    <meta name="description" content="Porto Admin - Responsive HTML5 Template">
    <meta name="author" content="okler.net">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/Content/assets/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/assets/vendor/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/Content/assets/vendor/magnific-popup/magnific-popup.css" />
    <link rel="stylesheet" href="~/Content/assets/vendor/bootstrap-datepicker/css/datepicker3.css" />

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/Content/assets/stylesheets/theme.css" />

    <!-- Skin CSS -->
    <link rel="stylesheet" href="~/Content/assets/stylesheets/skins/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/Content/assets/stylesheets/invoice-print.css" />

    <!-- Head Libs -->
    <script src="~/Content/assets/vendor/modernizr/modernizr.js"></script>

</head>
<!-- start: page -->
<body>

    <div class="invoice">
        <header class="clearfix">
            <div class="row">
                <div class="col-sm-6 mt-md">
                    <h2 class="h2 mt-none mb-sm text-dark text-bold">Hóa đơn</h2>
                    <h4 class="h4 m-none text-dark text-bold">#@Model.invoice.ID</h4>
                </div>
                <div class="col-sm-6 text-right mt-md mb-md">
                    <address class="ib mr-xlg">
                        Cửa hàng sách MS
                        <br />
                        236 Hoàng Quốc Việt, Hà Nội
                        <br />
                        0967555025
                        <br />
                        sachhay@ms.com
                    </address>
                    <div class="ib">
                        <img src="~/Content/assets/images/books.png" alt="OKLER Themes" style="max-width: 60px" />
                    </div>
                </div>
            </div>
        </header>
        <div class="bill-info">
            <div class="row">
                <div class="col-md-6">
                    <div class="bill-to">
                        <p class="h5 mb-xs text-dark text-semibold">Người nhận:</p>
                        <address style="margin-left:15px">
                            Họ và tên: <strong>@Model.invoice.CustomerName</strong>
                            <br />
                            Số điện thoại: <strong>@Model.invoice.PhoneNumber</strong>
                            <br />
                            Email: <strong>@Model.invoice.Email</strong>
                            <br />
                            Địa chỉ: <strong>@Model.invoice.Address</strong>
                        </address>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="bill-data text-right">
                        <p class="mb-none">
                            <span class="text-dark">Ngày đặt hàng:   @MyFunction.convert2String(Model.invoice.OrderDate)</span>
                               
                        </p>
                        @*<p class="mb-none">
                                <span class="text-dark">Due Date:</span>
                                <span class="value">06/20/2014</span>
                            </p>*@
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table invoice-items">
                <thead>
                    <tr class="h4 text-dark">
                        <th id="cell-id" class="text-semibold">STT</th>
                        <th id="cell-item" class="text-semibold">Sản phẩm</th>
                        <th id="cell-price" class="text-center text-semibold">Giá</th>
                        <th id="cell-qty" class="text-center text-semibold">Số lượng</th>
                        <th id="cell-total" class="text-center text-semibold">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var i = 1;
                    }
                    @foreach (var item in Model.list)
                    {
                        <tr>
                            <td>@i</td>
                            @{
                                i++;
                            }
                            <td class="text-semibold text-dark">@item.name</td>
                            <td class="text-center">@MyFunction.convert2String(item.price)đ</td>
                            <td class="text-center">@item.amount</td>
                            <td class="text-center">@MyFunction.convert2String(item.price * item.amount)đ</td>
                        </tr>
                                }


                </tbody>
            </table>
        </div>

        <div class="invoice-summary">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-8">
                    <table class="table h5 text-dark">
                        <tbody>
                            @*<tr class="b-top-none">
                                    <td colspan="2">Subtotal</td>
                                    <td class="text-left">$73.00</td>
                                </tr>
                                <tr>
                                    <td colspan="2">Shipping</td>
                                    <td class="text-left">$0.00</td>
                                </tr>*@
                            <tr class="h4">
                                <td colspan="2">Tổng tiền</td>
                                <td class="text-left">@MyFunction.convert2String(Model.invoice.Price)đ</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- end: page -->
    <script>
    window.print();
    </script>
</body>