@model PagedList.IPagedList<book.Models.Entities.Customer>
@using PagedList.Mvc; 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách khách hàng</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new {@class="btn btn-warning"})
</p>
<table class="table">
    <tr>
        <th>
            Họ và tên
        </th>
        <th>
            Email
        </th>
       
        <th>
            SĐT
        </th>
        <th>
           Giới tính
        </th>
        <th>
            Ngày tham gia
        </th>
        <th>
            Ngày sinh
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @if (item.Gender == 1)
            {
                <span>Nam</span>
            }
            else
            {
                <span>Nữ</span>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.join_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new {id = item.ID}, new {@class = "btn btn-primary fa fa-edit"}) |
            @Html.ActionLink(" ", "Details", new {id = item.ID}, new {@class = "btn btn-success fa fa-folder-open-o"}) |
            @Html.ActionLink(" ", "Delete", new {id = item.ID}, new {@class = "btn btn-danger 	fa fa-trash-o"})
        </td>
    </tr>
}

</table>
@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))