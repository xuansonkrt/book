@model PagedList.IPagedList<book.Models.Entities.Author>
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách các tác giả</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create",null,new {@class="btn btn-warning"})
</p>
<table class="table">
    <tr>
        <th>
            Tên tác giả
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Email
        </th>
        <th>
           Giới thiệu
        </th>
        @*<th>
            Avatar
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>
        <td>
            @if (item.Gender == 1)
            {
                <span>Nam</span>
            }
            else
            {
                <span>Nữ</span>
            }
           @* @Html.DisplayFor(modelItem => item.Gender)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Avatar)
        </td>*@
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "btn btn-primary fa fa-edit" }) |
            @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "btn btn-success fa fa-folder-open-o" }) |
            @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "btn btn-danger 	fa fa-trash-o" })
        </td>
    </tr>
}

</table>
@Html.PagedListPager(Model,page=>Url.Action("Index",new { page} ))